{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "jsx": "react",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es6", "DOM"]
    },
    "exclude": ["node_modules"]
}
